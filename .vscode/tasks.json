{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "python-run",
      "command": "${workspaceFolder}/api-python/.venv/bin/python",
      "args": [
        "-m",
        "uvicorn",
        "sonos_hub.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "5001",
        "--reload"
      ],
      "type": "process",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/api-python",
        "env": {
          "SONOS_HUB_DATA_DIRECTORY": "../api/data",
          "SONOS_HUB_WWWROOT_PATH": "../api/wwwroot",
          "SONOS_HUB_SOCO_CLI_USE_LOCAL_CACHE": "true"
        }
      }
    },
    {
      "label": "python-install",
      "command": "python3",
      "args": [
        "-m",
        "venv",
        ".venv"
      ],
      "type": "process",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/api-python"
      }
    },
    {
      "label": "python-deps",
      "command": "${workspaceFolder}/api-python/.venv/bin/pip",
      "args": [
        "install",
        "-e",
        "."
      ],
      "type": "process",
      "dependsOn": "python-install",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/api-python"
      }
    },
    {
      "label": "build (legacy .NET)",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "run (legacy .NET)",
      "command": "dotnet",
      "args": [
        "run"
      ],
      "type": "process",
      "dependsOn": "build (legacy .NET)",
      "isBackground": true,
      "problemMatcher": {
        "owner": "csharp",
        "pattern": {
          "regexp": "^(?:.*?\\s)?(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(\\w+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*$",
          "endsPattern": "^.*Application started.*$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "clean (legacy .NET)",
      "command": "dotnet",
      "args": [
        "clean",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "publish (legacy .NET)",
      "command": "dotnet",
      "args": [
        "publish",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "mcp-server",
      "command": "${workspaceFolder}/sonos-mcp-server/.venv/bin/python",
      "args": [
        "-m",
        "sonos_mcp_server"
      ],
      "type": "process",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/sonos-mcp-server"
      }
    },
    {
      "label": "mcp-server-install",
      "command": "python3",
      "args": [
        "-m",
        "venv",
        ".venv"
      ],
      "type": "process",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/sonos-mcp-server"
      }
    },
    {
      "label": "mcp-server-deps",
      "command": "${workspaceFolder}/sonos-mcp-server/.venv/bin/pip",
      "args": [
        "install",
        "-e",
        "."
      ],
      "type": "process",
      "dependsOn": "mcp-server-install",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/sonos-mcp-server"
      }
    }
  ]
}